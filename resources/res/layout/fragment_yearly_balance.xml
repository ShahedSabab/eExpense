<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="10">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="2" android:layout_weight="1">
            <View android:id="@+id/view_yearly_credit" android:background="@drawable/rounded_calender_item" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.3"/>
            <TextView android:textSize="20sp" android:textColor="@color/textColorBlack" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tvYearlyCrebitColor" android:layout_width="0dp" android:layout_height="match_parent" android:text="Credit" android:layout_weight="0.7"/>
            <View android:id="@+id/view_yearly_debit" android:background="@drawable/rounded_calender_item" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.3"/>
            <TextView android:textSize="20sp" android:textColor="@color/textColorBlack" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tvYearlyDebitColor" android:layout_width="0dp" android:layout_height="match_parent" android:text="Debit" android:layout_weight="0.7"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.PieChart android:id="@+id/pie_chart_balance" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="9"/>
    </LinearLayout>
</RelativeLayout>
